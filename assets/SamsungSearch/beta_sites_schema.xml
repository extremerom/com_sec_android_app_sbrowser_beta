<schema name="com.sec.android.app.sbrowser.beta.sites" version="1">
    <defaultAnalyzer class="bs.LowerCaseSpaceAnalyzer" />
    <fieldType name="string" class="StringField" dataType="String"/>
    <fieldType name="text" class="TextField" dataType="String"/>
    <fieldType name="sort" class="SortedDocValuesField" dataType="BytesRef"/>
    <fieldType name="long_numeric_field" class="NumericDocValuesField" dataType="long"/>
    <fieldType name="int_stored" class="StoredField" dataType="long"/>
    <fieldType name="int_sorted" class="NumericDocValuesField" dataType="long"/>
    <fieldType name="chosung" dataType="string" class="TextField">
        <analyzer type="index" class="bs.korean.ChosungAnalyzer" keepOtherLang="true"
            removeSpace="true"/>
    </fieldType>
    <fieldType name="spell" dataType="String" class="TextField">
        <analyzer class="bs.core.PerLanguageAnalyzer">
            <subAnalyzer class="bs.korean.ConsonantAnalyzer" lang="ko"/>
        </analyzer>
    </fieldType>
    <fieldType name="phonetic_field" dataType="String" class="TextField">
        <analyzer class="bs.core.PerLanguageAnalyzer">
            <subAnalyzer class="bs.korean.phonetic.KoreanPhoneticAnalyzer" lang="ko"
                enableLinkingRule="false"/>
            <subAnalyzer class="bs.latin.PhoneticAnalyzer" lang="la" minLength="4"/>
        </analyzer>
    </fieldType>

    <field name="page" type="string"/>
    <field name="title" type="text"/>
    <field name="url" type="text"/>
    <field name="path" type="text"/>
    <field name="editable" type="string"/>
    <field name="private" type="string"/>
    <field name="_id" type="string"/>
    <field name="id" type="string"/>
    <field name="id_num" type="long_numeric_field"/>
    <field name="title_fuzzy" type="spell" src="title" stored="false"/>
    <field name="title_chosung" type="chosung" stored="false" src="title"/>
    <field name="title_phonetic" type="phonetic_field" stored="false" src="title"/>
    <field name="url_fuzzy" type="spell" src="url" stored="false"/>
</schema>
