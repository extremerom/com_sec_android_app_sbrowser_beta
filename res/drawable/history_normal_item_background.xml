<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/color_palette_list_view_item_bg_color" />
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true" android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_transparent" />
                </shape>
            </item>
            <item android:state_checked="true" android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorControlHighlight" />
                </shape>
            </item>
            <item android:state_pressed="true" android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorControlHighlight" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
