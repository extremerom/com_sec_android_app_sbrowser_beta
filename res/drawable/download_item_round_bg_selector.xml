<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="@color/download_history_list_item_selected" />
            <corners android:radius="@dimen/download_history_item_corner_radius" />
        </shape>
    </item>
    <item>
        <ripple android:color="?android:colorControlHighlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/download_history_item_corner_radius" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <selector>
            <item android:state_selected="true" android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@color/color_transparent" />
                    <corners android:radius="@dimen/download_history_item_corner_radius" />
                </shape>
            </item>
            <item android:state_checked="true" android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorControlHighlight" />
                    <corners android:radius="@dimen/download_history_item_corner_radius" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
