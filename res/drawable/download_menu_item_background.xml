<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"
          xmlns:android="http://schemas.android.com/apk/res/android" />
    </item>
    <item>
        <ripple android:color="@color/color_control_highlight">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                </shape>
            </item>
        </ripple>
    </item>
    <item>
        <selector>
            <item android:state_selected="true" android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorControlHighlight" />
                </shape>
            </item>
            <item android:state_focused="true" android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="?android:colorFocusedHighlight" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
