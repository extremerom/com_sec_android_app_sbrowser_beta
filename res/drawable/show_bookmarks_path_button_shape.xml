<?xml version="1.0" encoding="utf-8"?>
<layer-list
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <corners android:radius="@dimen/add_bookmarks_button_shape_radius" />
            <padding android:left="@dimen/add_bookmarks_button_shape_left_padding" android:top="@dimen/add_bookmarks_button_shape_top_padding" android:right="@dimen/add_bookmarks_button_shape_right_padding" android:bottom="@dimen/add_bookmarks_button_shape_bottom_padding" />
            <stroke android:width="@dimen/add_bookmarks_button_shape_stroke_width" android:color="@color/show_bookmarks_path_button_text_color" />
            <solid android:color="@color/show_bookmarks_path_button_text_color" />
        </shape>
    </item>
    <item>
        <ripple android:color="?android:colorControlHighlight"
          xmlns:android="http://schemas.android.com/apk/res/android">
            <item android:id="@android:id/mask">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:radius="@dimen/add_bookmarks_button_shape_radius" />
                </shape>
            </item>
        </ripple>
    </item>
</layer-list>
